<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>com.sourcesense</groupId>
        <artifactId>oss-parent</artifactId>
        <version>1</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId> com.sourcesense.maven</groupId>
    <artifactId>maven-skin</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0</version>
    <name>Sourcesense Skin</name>
    <description>An alternative Maven site skin with rounded corners and code syntax highlight, Sourcesense branded.</description>
    <inceptionYear>2010</inceptionYear>
    <url>http://github.com/sourcesense/maven-skin</url>

    <issueManagement>
        <system>GitHub Issue tracker</system>
        <url>https://github.com/sourcesense/maven-skin/issues</url>
    </issueManagement>

    <scm>
        <url>http://github.com/sourcesense/maven-skin</url>
        <connection>scm:git:ssh://github.com/sourcesense/maven-skin.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/sourcesense/maven-skin.git</developerConnection>
    </scm>

    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
            </resource>

            <resource>
                <directory>${basedir}</directory>
                <targetPath>META-INF</targetPath>
                <includes>
                    <include>LICENSE</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
